{
  "include": ["packages"],
  "exclude": ["packages/*/dist"],
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "ts-force": ["packages/ts-force/src"],
      "ts-force-gen": ["packages/ts-force-gen/src"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,

    /* Additional Checks */
    "strict": true,
    "strictNullChecks": false, // not yet
    "forceConsistentCasingInFileNames": true,
    "suppressImplicitAnyIndexErrors": true, // not yet
    "noUnusedLocals": false, // not yet
    "noUnusedParameters": false, // not yet
    "noImplicitAny": false, // not yet
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true
  }
}
